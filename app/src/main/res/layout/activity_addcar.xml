<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">


        <TextView

            style="@style/pagesigininbutton"
            android:layout_marginHorizontal="175dp"
            android:text="add car"
            android:textSize="18dp"


            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="choose your car"
            android:textColor="#111111"
            android:textSize="20dp"           />
        <Spinner
            android:id="@+id/sptype"
            style="@style/spinner1"
            android:layout_marginHorizontal="90dp"
            android:layout_marginVertical="60dp"
            />

    </LinearLayout><![CDATA[

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    ]]>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="the year of car"
        android:textColor="#111111"
        android:textSize="20dp"

        />

    <Spinner
        android:id="@+id/spmodel"
        style="@style/spinner2"
        android:layout_marginHorizontal="230dp" />

    <EditText

        android:id="@+id/plate"
        style="@style/edittxt1"
        />

    <EditText
        android:id="@+id/color"
        style="@style/edittxt2"
        />

    <Button
        android:id="@+id/add"
        style="@style/pagesigininbutton"
        android:text="add"

        android:layout_marginHorizontal="150dp"

        />


</LinearLayout>